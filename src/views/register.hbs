<div class="container mt-3 mb-3">
    <section class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="form-screen">
                <div class="card account-dialog shadow">
                    <div class="card-header bg-primary text-white text-center"> Crear cuenta </div>
                    <div class="card-body">
                        <form action="/singup" method="POST">
                            <div class="form-group"><input class="form-control" id="nombre" type="text" placeholder="Nombre" name="nombre" value="" /></div>
                            <div class="form-group"><input class="form-control" id="apellido" type="text" placeholder="Apellido" name="apellido" value="" /></div>
                            <div class="form-group"><input class="form-control" id="email" type="email" aria-describedby="Email" placeholder="Ingresa tu email" name="email" /></div>
                            <div class="form-group"><input class="form-control" id="contra" type="password" placeholder="Contraseña" name="password" /></div>
                            <div class="form-group"><input class="form-control" id="repcontra" type="password" placeholder="Repita la contraseña" name="confirmPassword" /></div>
                            <div class="form-check form-switch color-success">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" name="tipoDeUsuario">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Es administrador 

                              <svg class="bi flex-shrink-0 me-2 d-none" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                            </label>

                            </div>
                            <div class="form-group"><input class="form-control" id="telefono" type="tel" placeholder="Telefono" name="telefono" /></div>
                            <div class="form-group"><input class="form-control" id="dni" type="text" placeholder="DNI" name="dni" /></div>
                            <button class="btn btn-primary btn-block w-100 mt-1" type="submit">Registrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </section>
</div>
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
</svg>
  <style>
      .bi.flex-shrink-0.me-2{
          color:green;
      }
  </style>
  <script>
      const cambio = document.getElementById('flexSwitchCheckChecked').addEventListener('click',()=>{
    if(document.querySelectorAll('.form-check-input')[0].checked){
        document.querySelector('.bi.flex-shrink-0.me-2').classList.remove('d-none')
        
    }else{
        document.querySelector('.bi.flex-shrink-0.me-2').classList.add('d-none')

    }
})
  </script>
